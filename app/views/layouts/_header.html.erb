<header class="header">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container pl-3">
      <div class="row"><%= link_to image_tag('logo1.jpeg', size: "200x230"), root_path %></div>
      <div class="col-9 pl-5 header-1">
        <ul class="navbar-nav text-nowrap pl-1">
        <% if user_signed_in? %>
          <li style= "margin-right: 5%;" ><%= link_to ' Home',root_path(current_user),class: 'fas fa-home nav-link text-light' %></li>
          <li style= "margin-right: 5%;" ><%= link_to ' マイページ',user_user_path(current_user.id),class: 'fas fa-users nav-link text-light' %></li>
          <li style= "margin-right: 5%;" ><%= link_to ' 投稿一覧',user_posts_path ,class: 'fas fa-book-open nav-link text-light'%></li>
          <li style= "margin-right: 5%;" ><%= link_to ' 新規投稿',new_user_post_path ,class: 'fas fa-pen nav-link text-light'%></li>
          <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% else %>
          <li style= "margin-right: 5%;" ><%= link_to ' Home',root_path,class: 'fas fa-home nav-link text-light' %></li>
          <li style= "margin-right: 5%;" ><%= link_to ' サイト概要',user_homes_about_path,class: 'fas fa-link nav-link text-light' %></li>
          <li style= "margin-right: 5%;" ><%= link_to ' 新規登録', new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
          <li><%= link_to ' ログイン', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>
        <% end %>
        </ul>
      </div>
    </div>
    <% if user_signed_in? %>
            <div class="text-light">
              <%= form_with url: search_searches_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.select :model, options_for_select({ "ユーザー" => "user", "投稿タイトル" => "post" }) %><br>
                <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
                <%= f.submit '検索' %>
              <% end %>
            </div>
            　<% end %>
  </nav>
</header>
