<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>ガジェッター</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li><%= link_to ' Home',root_path(current_user),class: 'fas fa-home nav-link text-light' %></li>
          <li><%= link_to ' マイページ',user_user_path(current_user.id),class: 'fas fa-users nav-link text-light' %></li>
          <li><%= link_to ' 投稿一覧',user_posts_path ,class: 'fas fa-book-open nav-link text-light'%></li>
          <li><%= link_to ' 新規投稿',new_user_post_path ,class: 'fas fa-book-open nav-link text-light'%></li>
          <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% else %>
          <li><%= link_to ' Home',root_path,class: 'fas fa-home nav-link text-light' %></li>
          <li><%= link_to ' サイト概要',user_homes_about_path,class: 'fas fa-link nav-link text-light' %></li>
          <li><%= link_to ' 新規登録', new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
          <li><%= link_to ' ログイン', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>
        <% end %>
        </ul>
        <% if user_signed_in? %>
            <div class="search-form">
              <%= form_with url: search_searches_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.select :model, options_for_select({ "ユーザー" => "user", "投稿タイトル" => "post" }) %>
                <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
                <%= f.submit '検索' %>
              <% end %>
            </div>
            　<% end %>
      </div>
    </div>
  </nav>
</header>
