<div class="bg">
  <div class="container">
     <div class="t1">
       <h2 class="fas fa-book-open t2">新着投稿一覧</h2>
      <% @posts.each do |post| %>
        <div class="col-8 mt-4">
          <div class="card"　style="width: 18rem;">
            <div class="profile_image">
              <%= link_to user_user_path(post.user), style: "color: gray;" do %>
                <%= attachment_image_tag post.user, :profile, fallback: "no_image.png", size:"50x50" %>
                <%= post.user.name %>
              <% end %>
            </div>
            <h5 class="card-title">
              <%= link_to user_post_path(post.id), style: "color: black;" do %>
              <i class="fas fa-envelope"></i>
              <%= post.title %>
              <% end %>
            </h5>
            <div class="image">
            <% post.post_images.first(2).each do |image| %>
            <%= attachment_image_tag image, :image, size:"150x150" %>
            <% end %>
            </div>
            <%#= link_to user_post_path(post.id) do %>
              <%#= attachment_image_tag(post, :image, :fill, 100, 100 ) %>
            <%# end %>
            <div class="card-body">
              <p class="card-text">
                <%= truncate(post.body) %>
              </p>

              <p class="card-text text-right">
                <small class="text-muted">
                  <%= post.created_at.strftime('%Y/%m/%d') %> |
                  <%= render 'user/post_comments/count', post: post %> |
                  ♥<%= post.favorites.count %></small>
                </small>
              </p>
            </div>
          </div>
        </div>
      <% end %>
     </div>
     <div>
       <%= paginate(@posts) %>
     </div>
  </div>
</div>




