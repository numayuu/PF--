<div class="card w-50 mx-auto my-4">
  <div class="card-text m-2">
    <%= link_to root_path(@user) do %>

      <%= @user.name %>
    <% end %>
    <% if @post.user == current_user %>
      <%= link_to "投稿編集", edit_user_post_path(@post.id), class: "btn btn-success btn-sm mx-2" %>
      <%= link_to "投稿削除", user_post_path(@post.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-dark btn-sm" %>
    <% end %>
  </div>

  <!--投稿画像-->
    <%= attachment_image_tag @post, :image, :fill, 300, 200, class: 'card-img-top rounded' %>

    <!--投稿本文-->
    <div class="card-body">
      <div class="card-title">
        <h4><%= @post.title %></h4>
      </div>



      <div class="card-text my-2">
        <%= @post.body %>
      </div>

    <!--投稿日時・コメント数・いいねボタン-->

    <div style="text-align: right;">
      <span><%= @post.created_at.strftime('%Y/%m/%d') %>  |</span>



    </div>

  <hr>

  <!--コメント機能-->


  </div>
</div>
