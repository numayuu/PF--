<div class="row">
    <% posts.each do |post| %>

      <div class="card" style="width: 18%; margin: 10px;">
      <%= attachment_image_tag(post, :image, :fill, 300, 300, class: 'card-img-top rounded', fallback: "no_image.png") %>
      <div class="card-body">
        <div class="card-title">
          <%= link_to post_path(post.id), style: "color: black;" do %>
            <i class="fas fa-ghost"></i>  <%= post.title %>
          <% end %>
        </div>
          <p class="card-text">
            <small><%= truncate(post.body) %></small>
          </p>
          <p class="card-text text-right">
            <small class="text-muted">
              <%= post.created_at.strftime('%Y/%m/%d') %> |
              <%= render 'user/post_comments/count', post: post %> |
              â™¥<%= post.favorites.count %>
            </small>
          </p>
        </div>
      </div>
    <% end %>
   </div>