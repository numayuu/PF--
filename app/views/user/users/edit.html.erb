<div class="container">
<div class="row">
  <div class="col"></div>
    <div class="col-auto">
      <h3 style="margin: 20px;">プロフィール編集</h3>
      <div style="text-center: left; margin: 20px;">

      <%= form_with model: @user, url: user_user_path, local:true do |f| %>
      <%= render 'layouts/errors', model: f.object %>
　        <%= attachment_image_tag @users, :profile, fallback: "no_image.png", size: "100x100"%>
      <table>
　       <tr>
　         <th><%= f.label :プロフィール画像, class: "mt-3 mr-5" %></th>
　         <td><%= f.attachment_field :image %></td>
　       </tr>
　       <tr>
　         <th><%= f.label :ニックネーム, class: "mt-3 mr-5" %></th>
　         <td><%= f.text_field :name, autofocus: true, id:"inputName" %></td>
　       </tr>
         <tr>
           <th><%= f.label :自己紹介, class: "mt-3 mr-5" %></th>
           <td><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", size: "50" %></td>
         </tr>
         <tr>
           <th></th>
           <td><%= f.submit "プロフィールを更新する", class: "btn mt-3", style: "background-color: #90ee90; color: black;" %>

         </tr>
      </table>
      <% end %>
      </div>
    </div>
    <div class="col"></div>
  </div>
</div>