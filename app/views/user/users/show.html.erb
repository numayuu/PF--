<div class="container">

  <div class="row">
    <div class="col"></div>
      <div class="col-5">
        <h3 style="margin: 20px;"><i class="far fa-address-card"></i> ユーザー詳細</h3>

        <div style="textmargin: 20px;">
          <%= attachment_image_tag @users, :profile_image, fallback: "no_image.png", size: "100x100" %>
        </div>

      <table class="profile">
        <tr>
          <th width="150">ニックネーム</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
        <% if @user == current_user %>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <% end %>

      </table>

　　　<div class="row">
　　　  <div class="col"></div>
　　　  <div class="col-auto">
　　　    <% if @user != current_user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-sm my-3", style: "background-color: #90ee90; color: black;" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-sm my-3", style: "background-color: #90ee90; color: black;" %>
          <% end %>
        <% end %>
　　　  </div>
　　　  <div class="col"></div>
　　　</div>


    <% if @user == current_user %>
      <div style="margin: 10px auto; text-align: right;">
        <%= link_to "プロフィール編集", edit_user_user_path, class: "btn btn-sm", style: "background-color: #90ee90; color: black;" %>
      </div>
    <% end %>
      </div>
      <div class="col"></div>
  </div>
</div>